using ictestproject.NewFolder;
using OpenQA.Selenium;
using OpenQA.Selenium.Chrome;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using TechTalk.SpecFlow;

namespace ictestproject.Stepdefinition
{
    [Binding]
    public class StepDefinitionhorseportal
    {
        [Given(@"I navigate to the portal")]
        public void GivenINavigateToThePortal()
        {
            IWebDriver driver;

            // initialize chrome driver 
            // Open a browser : Chrome
            driver = new ChromeDriver();
            //// Maximize the Chrome browser window
            driver.Manage().Window.Maximize();
            //implicit wait
            driver.Manage().Timeouts().ImplicitWait = TimeSpan.FromSeconds(10);

        }

        [When(@"I add credentials to the login page")]
        public void WhenIAddCredentialsToTheLoginPage()
        {
            IWebDriver driver;
            var login = new Loginpage(driver);
            login.login1();
        }

        [Then(@"I verfy that the user is able to login into the portal")]
        public void ThenIVerfyThatTheUserIsAbleToLoginIntoThePortal()
        {

        }

    }


}

